						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"identifier\": \"ethanh\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "login"]
						}
					}
				},
				{
					"name": "Get User Info",
					"request": {
						"method": "GET",
