{
	"info": {
		"name": "SmartSME API - With Companies",
		"description": "Complete SmartSME API collection including Company CRUD with RBAC",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"version": "1.1.0"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{accessToken}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "{{baseUrl}}",
			"type": "string"
		},
		{
			"key": "accessToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "refreshToken",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Guest Access (No Auth)",
			"description": "Test API endpoints without authentication - limited to read-only access",
			"item": [
				{
					"name": "Guest - Check Permissions",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"permissions\": [\n        \"PRODUCTION_READ\",\n        \"PRODUCTION_CREATE\",\n        \"COMPANY_READ\",\n        \"COMPANY_CREATE\"\n    ]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/permissions/check",
							"host": ["{{baseUrl}}"],
							"path": ["permissions", "check"]
						}
					}
				},
				{
					"name": "Guest - Get All Companies",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/companies?page=1&limit=5",
							"host": ["{{baseUrl}}"],
							"path": ["companies"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "5"
								}
							]
						}
					}
				},
				{
					"name": "Guest - Get Company by ID",
