{
	"info": {
		"name": "SmartSME API - Complete",
		"description": "Complete SmartSME API collection with authentication, permissions, actions, and guest access",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"version": "1.0.0"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{accessToken}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "{{baseUrl}}",
			"type": "string"
		},
		{
			"key": "accessToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "refreshToken",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Guest Access (No Auth)",
			"description": "Test API endpoints without authentication - limited to read-only access",
			"item": [
				{
					"name": "Guest - Check Permissions",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"permissions\": [\n        \"PRODUCTION_READ\",\n        \"PRODUCTION_CREATE\",\n        \"SECONDARY_PROCESS_READ\",\n        \"SECONDARY_PROCESS_UPDATE\"\n    ]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/permissions/check",
							"host": ["{{baseUrl}}"],
							"path": ["permissions", "check"]
						},
						"description": "Check which permissions are available for guest users"
					}
				},
				{
					"name": "Guest - Get My Permissions",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/permissions/me",
							"host": ["{{baseUrl}}"],
							"path": ["permissions", "me"]
						},
						"description": "Get all permissions available to guest users"
					}
				},
				{
					"name": "Guest - Check Actions",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"actions\": [\n        \"READ\",\n        \"CREATE\",\n        \"UPDATE\",\n        \"DELETE\"\n    ]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/actions/check",
							"host": ["{{baseUrl}}"],
							"path": ["actions", "check"]
						},
						"description": "Check which actions are available for guest users"
					}
				},
				{
					"name": "Guest - Get My Actions",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/actions/me",
							"host": ["{{baseUrl}}"],
							"path": ["actions", "me"]
						},
						"description": "Get all actions available to guest users"
					}
				}
			]
		},
		{
			"name": "Authentication",
			"description": "User authentication and session management",
			"item": [
				{
					"name": "Login - OWNER (Tamil)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('accessToken', response.accessToken);",
									"    pm.collectionVariables.set('refreshToken', response.refreshToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"identifier\": \"tamil\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "login"]
						},
						"description": "Login as OWNER role with full permissions"
					}
				},
				{
					"name": "Login - SHIFT_INCHARGE (Bob)",
					"event": [
						{
							"listen": "test",
